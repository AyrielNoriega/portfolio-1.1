import { cn } from "@/lib/utils";
import { Icon } from "astro-icon/components";

const itemsMe = [
    {
        text: 'Desarrollador',
        icon: 'asdf'
    },
    {
        text: 'Writer',
        icon: 'asdf'
    },
    {
        text: 'Gamer',
        icon: 'asdf'
    },
];

const mySkills = [
    {
        icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/typescript/typescript-plain.svg',
        text: 'TypeScript'
    },
    {
        icon: 'https://getbootstrap.com/docs/5.3/assets/brand/bootstrap-logo-shadow.png',
        text: 'Bootstrap'
    },
    {
        icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/css3/css3-plain.svg',
        text: 'CSS3'
    },
    {
        icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/html5/html5-plain.svg',
        text: 'HTML'
    },
    {
        icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/javascript/javascript-plain.svg',
        text: 'JavaScript'
    },
    {
        icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/postgresql/postgresql-plain.svg',
        text: 'PostgreSQL'
    },
    {
        icon: '/assets/icons/php.svg',
        text: 'Php',
    },
    {
        icon : '/assets/icons/laravel.svg',
        text: 'Laravel',
    },
    {
        icon: 'data:image/svg+xml;base64,',
        text: 'Reactjs',
    },
    {
        icon: '/assets/icons/jquery.svg',
        text: 'Jquery',
    },
    {
        icon: '/assets/icons/nodejs.svg',
        text: 'Nodejs',
    },
    {
        icon: '/assets/icons/mysql.svg',
        text: 'MySQL',
    },
    {
        icon: '/assets/icons/apache.svg',
        text: 'Apache',
    },
    {
        icon: '/assets/icons/linux.svg',
        text: 'Linux',
